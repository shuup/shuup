{% extends "shoop/front/base.jinja" %}
{% block title %}{% trans %}Company account information{% endtrans %}{% endblock %}
{% block content_title %}{% trans %}Company account information{% endtrans %}{% endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li><a href="/">{% trans %}Home{% endtrans %}</a></li>
        <li class="active">{% trans %}Company account information{% endtrans %}</li>
    </ol>
{% endblock %}

{% block content %}
    <div class="user-account">
        <form role="form" method="post" action="">
            <div class="btn-toolbar pull-right" role="toolbar">
                <div class="btn-group" role="group">
                    <a class="btn btn-info" href="{{ url("shoop:customer_edit") }}">
                        <i class="fa fa-users"></i> {% trans %}Edit user account information{% endtrans %}
                    </a>
                </div>
                <div class="btn-group" role="group">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-check"></i> {% trans %}Save changes{% endtrans %}</button>
                </div>
            </div>
            <div class="clearfix"></div>
            {% csrf_token %}
            {% for field in form.contact.hidden_fields() %}{{ field|safe }}{% endfor %}
            {% for field in form.billing.hidden_fields() %}{{ field|safe }}{% endfor %}
            {% for field in form.shipping.hidden_fields() %}{{ field|safe }}{% endfor %}
            <div class="well">
                <fieldset>
                    <legend>{% trans %}Company information{% endtrans %}</legend>
                    {% for field in form.contact.visible_fields() %}
                        {{ macros.render_field(field) }}
                    {% endfor %}
                </fieldset>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="well">
                        <fieldset>
                            <legend>{% trans %}Billing information{% endtrans %}</legend>
                            {% for field in form.billing.visible_fields() %}
                                {{ macros.render_field(field) }}
                            {% endfor %}
                        </fieldset>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="well">
                        <fieldset>
                            <legend>{% trans %}Shipping information{% endtrans %}</legend>
                            {% for field in form.shipping.visible_fields() %}
                                {{ macros.render_field(field) }}
                            {% endfor %}
                        </fieldset>
                    </div>
                </div>
            </div>
            <div class="btn-toolbar pull-right" role="toolbar">
                <div class="btn-group" role="group">
                    <button type="submit" class="btn btn-primary"><i class="fa fa-check"></i> {% trans %}Save changes{% endtrans %}</button>
                </div>
            </div>
            <div class="clearfix"></div>
        </form>
    </div>
{% endblock %}
