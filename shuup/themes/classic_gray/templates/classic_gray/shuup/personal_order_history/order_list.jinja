{% extends "shuup/front/base.jinja" %}

{% block title -%}
    {{ _("Order History") }}
{%- endblock %}

{% block breadcrumb %}
    <ol class="breadcrumb">
        <li><a href="/">{% trans %}Home{% endtrans %}</a></li>
        <li class="active">{% trans %}Order History{% endtrans %}</li>
    </ol>
{% endblock %}

{% block content %}
    <h1 class="page-header">
        {{ _("Order history") }}
    </h1>

    {% if orders %}
    <div class="well">
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>{{ _('Identifier') }}</th>
                        <th>{{ _('Order date') }}</th>
                        <th>{{ _('Status') }}</th>
                        <th class="text-right">{{ _('Total price') }}</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for order in orders %}
                        <tr>
                            <td>{{- order.identifier -}}</td>
                            <td>{{ order.order_date|datetime }}</td>
                            <td>{{ order.get_status_display() }}</td>
                            <td class="text-right">{{ order.taxful_total_price|money }}</td>
                            <td class="text-right"><a href="{{ url("shuup:show-order", pk=order.pk) }}"><i class="fa fa-search"></i> {% trans %}Details{% endtrans %}</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
    {% else %}
        <p class="lead"><i class="fa fa-info-circle text-info"></i> {{ _("You haven't made any orders yet.") }}</p>
    {% endif %}
{% endblock %}
